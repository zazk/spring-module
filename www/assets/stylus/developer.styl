	max-width 768px
	margin auto

.wancho-regular
	max-width 1180px
	margin auto
	width 94%
	
.n-navprimary
	position relative
.n-title
	position absolute
	top 0
	left 20px
	z-index 10
.p10
	padding 10px
.w100
	width 100%
.w96
	width 96%

//tabla responsive	
.n-table-responsive	
	.n-label
		display none
//tabla responsive	

table td
	vertical-align: middle !important

.legendLabel
	font-size: 20px

//menu
.dropdown-toggle
	span, i
		display inline-block
		vertical-align middle
	.user-info
		top 0	
		
.breadcrumb
	>li
		color c-1
		&.active, &:hover
			color #555
			>
				a
					color #555
					font-weight bold
					text-decoration underline	
			
//menu
// Menu responsive
.responsive-logo
	margin-top 10px
	width 80%
	display block
	img
		display block
		width 100%
		height auto

.menu-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index -1
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.45s ease
	&.active
		z-index 1000
		opacity 0.8

.menu-mobile-close, .menu-mobile-open
	background-color c-1
	border-radius 7%
	color white
	cursor pointer
	font-size 28px
	height 42px
	line-height 42px
	position fixed
	right 5px
	text-align center
	top 5px
	transition all 0.45s ease
	width 42px
	transform rotate(0deg)

.menu-mobile-open
	opacity 1
	visibility hidden
	z-index 1002
	top 47px
	&.scrolling
		opacity 0.6
	&:hover
		opacity 1
	&.active
		visibility hidden
		opacity 0
		right 220px
		z-index 1000
		transform rotate(-90deg)

.menu-mobile-close
	visibility hidden
	opacity 0
	z-index 1000
	background white
	color c-1
	&.active
		visibility visible
		opacity 1
		right 205px
		z-index 1002
		transform rotate(-90deg)
.menu-sidebar
	width 200px
	height 100%
	overflow auto
	position fixed
	top 0
	right -200px
	background c-1
	z-index 1000
	transition right 0.45s ease
	&.active
		right 0
.menu-responsive
	margin 0
	padding 0
	padding-top 10px
	li
		list-style none
		display flex
		align-items center
		border-bottom 1px solid #367598
		.fa
			color #fff
			margin-left 10px
		&.active
			background-color c-2
			
		a
			font-size 14px
			color #fff
			width 100%
			height 48px
			display flex
			align-items center
			padding 0 10px


.cnt-wrapper,.footer
	position relative
	left 0
	transition left 0.45s ease
	&.active
		left -200px
.wrapper
	overflow hidden

body
	&.active
		overflow hidden

@media screen and (max-width:1024px)
	.menu
		display none
	.menu-mobile-open
		visibility visible

	/** menu **/
	.breadcrumb.menu-list
		display none
	.breadcrumbs
		min-height 48px
	.n-title
		top 5px

@media screen and (max-width:745px)
	.ss8
		.table-header
			margin-bottom 10px
		
		.col-xs-4
			display block
			float none
			width 100%
			margin-bottom 10px
			overflow hidden
			&:last-child
				text-align center
	//tablas responsive
	.n-table-responsive	
		thead
			display none
		tbody
			td
				display flex
				width 100%
				flex-flow row wrap
				border none !important
				padding 0 !important
				&:nth-child(8)
					border-bottom 5px solid #fff !important

		.n-label
			height 40px
			display flex
			width 30%
			align-items center
			background-color #6FB3E0
			color #fff
			padding-left 10px
			box-sizing border-box
		.n-descrip
			padding 0 10px
			box-sizing border-box
			height 40px
			width 70%
			display flex
			align-items center
			border-bottom 1px solid #ccc


@media screen and (max-width:640px)
	//ss3
	.ss3-main
		.col-xs-6
			float none
			width 100%
			margin-bottom 30px
		
		

@media screen and (max-width:480px)
	.navbar-buttons.navbar-header
		position absolute
		right 0px
		top 0px
